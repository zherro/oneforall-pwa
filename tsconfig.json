{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "checkJs":true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    // "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    // "moduleResolution": "bundler",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@lib/*": [
        "lib/*"
      ],
      "@data/*": [
        "data/*"
      ],
      "@hook/*": [
        "hooks/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@context/*": [
        "contexts/*"
      ],
      "@reducer/*": [
        "reducers/*"
      ],
      "@component/*": [
        "components/*"
      ],
      "@sections/*": [
        "page-sections/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@supabaseutils/*": [
        "supabase/*"
      ],
      "@integrations/*": [
        "integrations/*"
      ],
      "@routes/*": [
        "routes/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/components/icon/Icon.tsx",
    "**/auth/confirm*"
  ]
}
